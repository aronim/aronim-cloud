{
  "id": "docker-registry-nginx",
  "instances": 1,
  "cpus": 0.25,
  "mem": 64.0,
  "disk": 0,
  "container": {
    "docker": {
      "type": "DOCKER",
      "image": "hub.kungfudev.io/nginx-proxy",
      "network": "BRIDGE",
      "parameters": [],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        },
        {
          "containerPort": 443,
          "hostPort": 443,
          "protocol": "tcp"
        }
      ]
    },
    "volumes": [
      {
        "containerPath": "/var/cache/nginx",
        "hostPath": "/data/nginx/cache",
        "mode": "RW"
      },
      {
        "containerPath": "/etc/nginx/external",
        "hostPath": "/data/nginx/etc",
        "mode": "RW"
      }
    ]
  },
  "env": {
    "SETTINGS_FLAVOR": "local"
  },
  "ports": [
    80,
    443
  ]
}